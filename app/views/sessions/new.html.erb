
<div class="signin">
  <h2>Sign In</h2>

  <% flash.each do |name, msg| %>
    <%= content_tag :p, msg, class: name %>
  <% end %>

  <%= form_for :session, url: sessions_path do |f| %>

  <li>
    <%= f.text_field :email, placeholder: "email" %>
  </li>

  <li>
    <%= f.password_field :password, placeholder: "password" %>
  </li>

    <%= f.submit 'Sign in', id: 'signin' %>
  <% end %>
</div>
